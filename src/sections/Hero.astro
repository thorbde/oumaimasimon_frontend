---
import Button from "../components/Button.astro";
---

<section id="hero">
  <h1>
    Oumaima
    <div class="ampersand">&</div>
    Simon
  </h1>
  <div class="dateAndButton">
    <p class="date">11 Juli 2026</p>
    <Button size="small" href="/rsvp">RSVP</Button>
  </div>
</section>

<style>
  h1 {
    font-family: var(--font-display);
    font-weight: 400;
    font-style: normal;
    font-size: 3.5rem;
    line-height: 1;
    text-align: center;
    color: var(--color-primary-900);

    .ampersand {
      font-size: 1.5rem;
      position: relative;
      top: 0.2em;
    }
  }

  .dateAndButton {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    #hero {
      gap: 3rem;
      padding: 8rem 2.5rem;
    }

    h1 {
      font-size: 7rem;

      .ampersand {
        font-size: 2.5rem;
      }
    }

    .dateAndButton {
      flex-direction: row;
      gap: 2rem;
    }
  }
</style>
