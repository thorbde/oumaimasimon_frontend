    text-align: center;
    color: var(--color-primary-900);

    .ampersand {
      font-size: 2rem;
      position: relative;
      top: 0.25em;
    }
  }

  .dateAndButton {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
