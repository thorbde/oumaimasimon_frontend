---
import Button from "../components/Button.astro";
import Section from "../components/Section.astro";
---

<div id="hero">
  <h1>
    Oumaima
    <div class="ampersand">&</div>
    Simon
  </h1>
  <div class="dateAndButton">
    <p class="date">11 Juli 2026</p>
    <Button size="small" href="/rsvp">RSVP</Button>
  </div>
</div>

<style>
  #hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 1.5rem;
    text-align: center;
    min-height: calc(100vh - var(--header-height));
    gap: 2rem;
  }

  h1 {
    font-family: var(--font-display);
    font-weight: 400;
    font-style: normal;
    font-size: 3.5rem;
    line-height: 1;
    text-align: center;
    color: var(--color-primary-900);

    .ampersand {
      font-size: 1.5rem;
      position: relative;
      top: 0.2em;
    }
  }

  .dateAndButton {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    h1 {
      font-size: 7rem;

      .ampersand {
        font-size: 2.5rem;
      }
    }

    .dateAndButton {
      flex-direction: row;
    }
  }
</style>
