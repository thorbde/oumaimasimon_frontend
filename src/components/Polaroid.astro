---
const { image, caption, className } = Astro.props;
---

<div class=`polaroid ${className}`>
  <img src={image} alt="" />
  <p class="caption">{caption}</p>
</div>

<style>
  .polaroid {
    background-color: var(--color-bg);
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.1);
    aspect-ratio: 5/6;

    .caption {
      font-family: var(--font-marker);
      font-size: 2rem;
      text-align: center;
      margin: auto;
    }

    img {
      object-fit: cover;
      width: 88%;
      margin-top: 5.7%;
      aspect-ratio: 1/1;
    }
  }
</style>
