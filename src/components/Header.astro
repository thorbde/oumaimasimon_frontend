---
import Button from "./Button.astro";
---

<header>
  <nav>
    <a class="logo" href="/#hero">Oumaima & Simon</a>

    <div class="links">
      <a href="/#plats">plats</a>
      <a href="/#info">info</a>
      <Button size="small" href="/rsvp">Anm√§lan</Button>
    </div>
  </nav>
</header>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    background: color-mix(in srgb, var(--color-bg) 92%, white 8%);
    border-bottom: 1px solid
      color-mix(in srgb, var(--color-primary-300) 35%, transparent);
    backdrop-filter: blur(10px);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    gap: 1.5rem;
    text-transform: uppercase;

    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .logo {
    font-size: 1.5rem;
  }

  .links {
    font-family: var(--font-display);
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  @media (max-width: 640px) {
    nav {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
