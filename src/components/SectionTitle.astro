---
const { title } = Astro.props;
---

<div>
  <h2>{title}</h2>
  <slot />
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    max-width: 32rem;
  }

  h2 {
    font-family: var(--font-display);
    font-weight: 100;
    line-height: 1.5;
    font-size: 3rem;
  }
</style>
