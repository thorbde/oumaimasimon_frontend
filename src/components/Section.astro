---
const { id, noPadding } = Astro.props;
---

<section id={id} class={noPadding ? "noPadding" : ""}>
  <slot />
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4rem;
    padding: 16rem 1.5rem;
    text-align: center;
    min-height: calc(100vh - var(--header-height));
  }

  .noPadding {
    padding: 16rem 0;
  }

  @media (min-width: 768px) {
  }
</style>
