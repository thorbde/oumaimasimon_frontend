---
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section id="rsvp">
    <div class="intro">
      <h1>Anmälan</h1>
      <p>
        Vi ser så mycket fram emot att fira med er! Fyll i formuläret nedan
        senast <strong>28 Februari 2026</strong> så vi kan planera i lugn och ro.
      </p>
    </div>
    <form
      class="rsvpForm"
      method="POST"
      action="https://api.oumaimasimon.se/submit"
      autocomplete="on"
      data-state="idle"
    >
      <div class="formBody" data-form-body>
        <div class="field">
          <label for="full-name">Namn</label>
          <input id="full-name" name="full-name" type="text" required />
        </div>
        <div class="field">
          <label for="email">E-post</label>
          <input id="email" name="email" type="email" required />
        </div>
        <fieldset class="field fieldset attendance">
          <legend>Kommer du?</legend>
          <div class="option-group inline">
            <label>
              <input type="radio" name="attendance" value="yes" required />
              Ja
            </label>
            <label>
              <input type="radio" name="attendance" value="no" />
              Nej
            </label>
          </div>
        </fieldset>
        <div class="conditionalFields" data-conditional-fields>
          <div class="field">
            <label for="dietary">Mat & allergier</label>
            <textarea
              id="dietary"
              name="dietary"
              rows="4"
              placeholder="Berätta om allergier eller kostönskemål vi behöver känna till."
            ></textarea>
          </div>
          <fieldset class="field fieldset">
            <legend>Dricker du alkohol?</legend>
            <div class="option-group inline">
              <label>
                <input type="radio" name="alcohol" value="yes" required />
                Ja
              </label>
              <label>
                <input type="radio" name="alcohol" value="no" />
                Nej
              </label>
            </div>
          </fieldset>
          <div class="field">
            <label>Vill du ha kaffe eller te?</label>
            <div class="option-group inline">
              <label>
                <input type="checkbox" name="hot-drinks[]" value="coffee" />
                Kaffe
              </label>
              <label>
                <input type="checkbox" name="hot-drinks[]" value="tea" />
                Te
              </label>
            </div>
          </div>
          <div class="field">
            <label for="message">Meddelande till brudparet</label>
            <textarea id="message" name="message" rows="4"></textarea>
          </div>
        </div>
        <Button type="submit">Skicka mitt svar</Button>
      </div>
      <div class="formStatus" data-form-status hidden>
        <div class="statusIcon" data-status-icon aria-hidden="true"></div>
        <p class="statusTitle" data-status-title></p>
        <p class="statusMessage" data-status-message></p>
        <Button class="statusReset" data-status-reset hidden
          >Tillbaka till hemsidan</Button
        >
      </div>
    </form>
  </section>
</Layout>

<style>
  #rsvp {
    padding: 8rem 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
    text-align: center;
  }

  .intro {
    max-width: 32rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 10vw, 4rem);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .rsvpForm {
    width: min(720px, 100%);
    display: grid;
    gap: 1.5rem;
    padding: 2rem;
    background: color-mix(in srgb, var(--color-bg) 85%, white 15%);
    border-radius: 16px;
    border: 1px solid
      color-mix(in srgb, var(--color-primary-300) 35%, transparent);
    box-shadow: 0 2rem 3.5rem rgba(0, 0, 0, 0.08);
    text-align: left;
  }

  .formBody,
  .formStatus {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .formStatus {
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 1rem;
  }

  .rsvpForm[data-state="idle"] .formStatus {
    display: none;
  }

  .rsvpForm:not([data-state="idle"]) .formBody {
    display: none;
  }

  .statusIcon {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    position: relative;
  }

  .statusTitle {
    font-size: 1.5rem;
    font-family: var(--font-display);
  }

  .statusMessage {
    max-width: 28rem;
    line-height: 1.4;
  }

  .statusReset {
    background: transparent;
    border: 1px solid
      color-mix(in srgb, var(--color-primary-500) 60%, transparent);
    border-radius: 999px;
    padding: 0.65rem 1.5rem;
    cursor: pointer;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
  }

  .statusReset:hover {
    background: var(--color-primary-500);
    color: var(--color-bg);
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  input[type="text"],
  input[type="email"],
  input[type="number"],
  textarea {
    width: 100%;
    border-radius: 8px;
    border: 1px solid
      color-mix(in srgb, var(--color-primary-300) 45%, transparent);
    background-color: color-mix(in srgb, var(--color-bg) 80%, white 20%);
    padding: 0.85rem 1rem;
    font-size: 1rem;
    transition:
      border-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px
      color-mix(in srgb, var(--color-primary-500) 25%, transparent);
  }

  .fieldset {
    gap: 1rem;
  }

  .option-group {
    display: grid;
    gap: 0.75rem;
  }

  .fieldset legend + .option-group,
  .field > .option-group {
    margin-top: 0.5rem;
  }

  .option-group.inline {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .option-group label {
    display: flex;
    align-items: center;
    gap: 0.65rem;
  }

  input[type="checkbox"],
  input[type="radio"] {
    appearance: none;
    width: 1.1rem;
    height: 1.1rem;
    border: 2px solid color-mix(in srgb, var(--color-primary-500) 75%, black 5%);
    background-color: #fff;
    display: grid;
    place-content: center;
    transition:
      border-color 0.2s ease,
      background-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  input[type="checkbox"] {
    border-radius: 0.3rem;
  }

  input[type="radio"] {
    border-radius: 50%;
  }

  input[type="checkbox"]::after,
  input[type="radio"]::after {
    content: "";
    transform: scale(0);
    transform-origin: center;
    transition: transform 0.18s ease;
  }

  input[type="checkbox"]::after {
    width: 0.25rem;
    height: 0.45rem;
    border-right: 2px solid #fff;
    border-bottom: 2px solid #fff;
    transform: scale(0) rotate(45deg);
  }

  input[type="radio"]::after {
    width: 0.45rem;
    height: 0.45rem;
    border-radius: 50%;
    background-color: #fff;
  }

  input[type="checkbox"]:checked,
  input[type="radio"]:checked {
    background-color: var(--color-primary-500);
    border-color: var(--color-primary-500);
  }

  input[type="checkbox"]:checked::after {
    transform: scale(1) rotate(45deg);
  }

  input[type="radio"]:checked::after {
    transform: scale(1);
  }

  input[type="checkbox"]:focus-visible,
  input[type="radio"]:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px
      color-mix(in srgb, var(--color-primary-500) 30%, transparent);
  }

  .extra-note {
    font-weight: 500;
  }

  .conditionalFields {
    display: grid;
    gap: 1.5rem;
    overflow: hidden;
    max-height: 0;
    opacity: 0;
    padding-block: 0;
    visibility: hidden;
    transition:
      max-height 0.4s ease,
      opacity 0.3s ease,
      padding 0.4s ease,
      visibility 0s linear 0.4s;
  }

  .conditionalFields.is-visible {
    max-height: 2000px;
    opacity: 1;
    padding-block: 0.5rem 0;
    visibility: visible;
    transition:
      max-height 0.45s ease,
      opacity 0.35s ease,
      padding 0.45s ease,
      visibility 0s;
  }

  .rsvpForm[data-state="loading"] {
    .statusTitle,
    .statusMessage,
    .statusReset {
      display: none;
    }
  }

  .rsvpForm[data-state="loading"] .statusIcon {
    border: 4px solid
      color-mix(in srgb, var(--color-primary-500) 60%, transparent);
    border-top-color: color-mix(
      in srgb,
      var(--color-primary-500) 10%,
      transparent
    );
    animation: spin 0.8s linear infinite;
  }

  .rsvpForm[data-state="success"] .statusIcon {
    background-color: var(--color-primary-500);
  }

  .rsvpForm[data-state="success"] .statusIcon::after {
    content: "";
    position: absolute;
    inset: 0.65rem 1rem 1rem 1.2rem;
    border-right: 3px solid var(--color-bg);
    border-bottom: 3px solid var(--color-bg);
    transform: rotate(45deg);
  }

  .rsvpForm[data-state="error"] .statusIcon {
    background-color: #b85c5c;
  }

  .rsvpForm[data-state="error"] .statusIcon::before,
  .rsvpForm[data-state="error"] .statusIcon::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 1.75rem;
    height: 0.25rem;
    background-color: var(--color-bg);
    border-radius: 1rem;
  }

  .rsvpForm[data-state="error"] .statusIcon::before {
    transform: translate(-50%, -50%) rotate(45deg);
  }

  .rsvpForm[data-state="error"] .statusIcon::after {
    transform: translate(-50%, -50%) rotate(-45deg);
  }

  @media (min-width: 768px) {
    #rsvp {
      padding: 10rem 3rem 6rem;
      text-align: left;
      align-items: center;
    }

    .intro {
      text-align: center;
    }

    .checkbox-group {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>

<style>
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
</style>

<script>
  const initRsvpForm = () => {
    const form = document.querySelector(".rsvpForm");
    if (!(form instanceof HTMLFormElement)) return;
    if (form.dataset.behaviorInitialized === "true") return;
    form.dataset.behaviorInitialized = "true";
    const endpoint =
      form.getAttribute("action") || "https://api.oumaimasimon.se/submit";

    const attendanceInputs = Array.from(
      form.querySelectorAll<HTMLInputElement>('input[name="attendance"]')
    );
    const conditionalBlock = form.querySelector("[data-conditional-fields]");
    const statusPanel = form.querySelector("[data-form-status]");
    const statusTitle = form.querySelector("[data-status-title]");
    const statusMessage = form.querySelector("[data-status-message]");
    const statusReset = form.querySelector("[data-status-reset]");
    const submitButton = form.querySelector('button[type="submit"]');

    if (
      attendanceInputs.length === 0 ||
      attendanceInputs.some((input) => input.type !== "radio") ||
      !(conditionalBlock instanceof HTMLElement) ||
      !(statusPanel instanceof HTMLElement) ||
      !(statusTitle instanceof HTMLElement) ||
      !(statusMessage instanceof HTMLElement) ||
      !(statusReset instanceof HTMLButtonElement) ||
      !(submitButton instanceof HTMLButtonElement)
    ) {
      return;
    }

    const conditionalMeta = Array.from(
      conditionalBlock.querySelectorAll("input, textarea")
    ).map((element) => ({
      element,
      wasRequired:
        element instanceof HTMLInputElement ||
        element instanceof HTMLTextAreaElement
          ? element.required
          : false,
    }));

    const showIdleState = () => {
      form.dataset.state = "idle";
      statusPanel.hidden = true;
      statusTitle.textContent = "";
      statusMessage.textContent = "";
      statusReset.hidden = true;
      submitButton.disabled = false;
      submitButton.dataset.state = "";
    };

    const showLoadingState = () => {
      form.dataset.state = "loading";
      statusPanel.hidden = false;
      statusTitle.textContent = "Skickar…";
      statusMessage.textContent =
        "Häng kvar en liten stund medan vi sparar ert svar.";
      statusReset.hidden = true;
      submitButton.disabled = true;
      submitButton.dataset.state = "loading";
    };

    const showSuccessState = () => {
      form.dataset.state = "success";
      statusPanel.hidden = false;
      statusTitle.textContent = "Klart!";
      statusMessage.textContent = "Tack för ditt svar!";
      statusReset.hidden = false;
      statusReset.textContent = "Tillbaka till hemsidan";
      submitButton.disabled = false;
      submitButton.dataset.state = "";
    };

    const showErrorState = () => {
      form.dataset.state = "error";
      statusPanel.hidden = false;
      statusTitle.textContent = "Hoppsan!";
      statusMessage.textContent =
        "Något gick fel när vi försökte spara ert svar. Testa gärna igen om en liten stund, eller kontakta oss på toasmaster.oumaimasimon@gmail.com.";
      statusReset.hidden = false;
      statusReset.textContent = "Försök igen";
      submitButton.disabled = false;
      submitButton.dataset.state = "";
    };

    const serializeForm = () => {
      const formData = new FormData(form);
      const grouped = new Map();

      formData.forEach((value, key) => {
        const current = grouped.get(key) ?? [];
        current.push(String(value));
        grouped.set(key, current);
      });

      return Object.fromEntries(
        Array.from(grouped.entries()).map(([key, values]) => [
          key,
          values.length <= 1 ? values[0] : values,
        ])
      );
    };

    const getAttendanceValue = () =>
      attendanceInputs.find((input) => input.checked)?.value ?? "";

    const toggleConditionalFields = () => {
      const shouldShow = getAttendanceValue() === "yes";
      conditionalBlock.classList.toggle("is-visible", shouldShow);
      conditionalBlock.setAttribute(
        "aria-hidden",
        shouldShow ? "false" : "true"
      );

      conditionalMeta.forEach(({ element, wasRequired }) => {
        if (
          element instanceof HTMLInputElement ||
          element instanceof HTMLTextAreaElement
        ) {
          element.disabled = !shouldShow;
          if (wasRequired) {
            element.required = shouldShow;
          }
          if (!shouldShow) {
            if (
              element instanceof HTMLInputElement &&
              (element.type === "checkbox" || element.type === "radio")
            ) {
              element.checked = false;
            } else {
              element.value = "";
            }
          }
        }
      });
    };

    const resetForm = () => {
      form.reset();
      toggleConditionalFields();
    };

    statusReset.addEventListener("click", () => {
      showIdleState();
      window.location.href = "/";
    });

    toggleConditionalFields();
    showIdleState();
    attendanceInputs.forEach((input) => {
      input.addEventListener("change", toggleConditionalFields);
    });

    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      if (!form.reportValidity()) return;

      showLoadingState();

      try {
        const response = await fetch(endpoint, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(serializeForm()),
        });

        if (!response.ok) {
          throw new Error(`Request failed with status ${response.status}`);
        }

        showSuccessState();
        resetForm();
      } catch (error) {
        console.error(error);
        showErrorState();
      }
    });
  };

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initRsvpForm, { once: true });
  } else {
    initRsvpForm();
  }

  document.addEventListener("astro:page-load", initRsvpForm);
</script>
