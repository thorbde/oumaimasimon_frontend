---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section id="rsvp">
    <div class="intro">
      <h1>RSVP</h1>
      <p>
        Vi ser så mycket fram emot att fira med er! Fyll i formuläret nedan
        senast 1 maj 2026 så vi kan planera mat, sittning och överraskningar.
      </p>
    </div>
    <form
      class="rsvpForm"
      method="POST"
      action="https://formspree.io/f/your-form-id"
      autocomplete="on"
    >
      <input type="hidden" name="_subject" value="RSVP – Oumaima & Simon" />
      <div class="field">
        <label for="full-name">Fullständigt namn</label>
        <input id="full-name" name="full-name" type="text" required />
      </div>
      <div class="field">
        <label for="email">E-postadress</label>
        <input id="email" name="email" type="email" required />
      </div>
      <div class="field">
        <label for="attendance">Kommer du?</label>
        <select id="attendance" name="attendance" required>
          <option value="">Välj ett alternativ</option>
          <option value="yes">Ja, jag/vi kommer!</option>
          <option value="no">Tyvärr, jag/vi kan inte komma</option>
        </select>
      </div>
      <div class="conditionalFields" data-conditional-fields>
        <div class="field">
          <label for="dietary">Mat & allergier</label>
          <textarea
            id="dietary"
            name="dietary"
            rows="4"
            placeholder="Berätta om allergier eller kostönskemål vi behöver känna till."
          ></textarea>
        </div>
        <fieldset class="field fieldset">
          <legend>Dricker du alkohol?</legend>
          <div class="option-group inline">
            <label>
              <input type="radio" name="alcohol" value="yes" required />
              Ja, gärna
            </label>
            <label>
              <input type="radio" name="alcohol" value="no" />
              Nej tack
            </label>
          </div>
        </fieldset>
        <div class="field">
          <label>Vill du ha kaffe eller te?</label>
          <div class="option-group inline">
            <label>
              <input type="checkbox" name="hot-drinks[]" value="coffee" />
              Kaffe
            </label>
            <label>
              <input type="checkbox" name="hot-drinks[]" value="tea" />
              Te
            </label>
          </div>
        </div>
        <div class="field">
          <label for="message">Meddelande till brudparet</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            placeholder="Vill du önska en låt, förvarna om tal eller dela något annat?"
          ></textarea>
        </div>
      </div>
      <button type="submit">Skicka mitt svar</button>
    </form>
  </section>
</Layout>

<style>
  #rsvp {
    padding: 8rem 1.5rem 4rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
    text-align: center;
  }

  .intro {
    max-width: 32rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 10vw, 4rem);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .rsvpForm {
    width: min(720px, 100%);
    display: grid;
    gap: 1.5rem;
    padding: 2rem;
    background: color-mix(in srgb, var(--color-bg) 85%, white 15%);
    border-radius: 16px;
    border: 1px solid
      color-mix(in srgb, var(--color-primary-300) 35%, transparent);
    box-shadow: 0 2rem 3.5rem rgba(0, 0, 0, 0.08);
    text-align: left;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label,
  legend {
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  input[type="text"],
  input[type="email"],
  input[type="number"],
  select,
  textarea {
    width: 100%;
    border-radius: 12px;
    border: 1px solid
      color-mix(in srgb, var(--color-primary-300) 45%, transparent);
    background-color: color-mix(in srgb, var(--color-bg) 80%, white 20%);
    padding: 0.85rem 1rem;
    font-size: 1rem;
    transition:
      border-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  input:focus,
  select:focus,
  textarea:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 3px
      color-mix(in srgb, var(--color-primary-500) 25%, transparent);
  }

  .fieldset {
    gap: 1rem;
  }

  .option-group {
    display: grid;
    gap: 0.75rem;
  }

  .fieldset legend + .option-group,
  .field > .option-group {
    margin-top: 0.5rem;
  }

  .option-group.inline {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .option-group label {
    display: flex;
    align-items: center;
    gap: 0.65rem;
  }

  input[type="checkbox"],
  input[type="radio"] {
    appearance: none;
    width: 1.1rem;
    height: 1.1rem;
    border: 2px solid color-mix(in srgb, var(--color-primary-500) 75%, black 5%);
    background-color: #fff;
    display: grid;
    place-content: center;
    transition:
      border-color 0.2s ease,
      background-color 0.2s ease,
      box-shadow 0.2s ease;
  }

  input[type="checkbox"] {
    border-radius: 0.3rem;
  }

  input[type="radio"] {
    border-radius: 50%;
  }

  input[type="checkbox"]::after,
  input[type="radio"]::after {
    content: "";
    transform: scale(0);
    transform-origin: center;
    transition: transform 0.18s ease;
  }

  input[type="checkbox"]::after {
    width: 0.55rem;
    height: 0.35rem;
    border-right: 2px solid #fff;
    border-bottom: 2px solid #fff;
    transform: scale(0) rotate(45deg);
  }

  input[type="radio"]::after {
    width: 0.45rem;
    height: 0.45rem;
    border-radius: 50%;
    background-color: #fff;
  }

  input[type="checkbox"]:checked,
  input[type="radio"]:checked {
    background-color: var(--color-primary-500);
    border-color: var(--color-primary-500);
  }

  input[type="checkbox"]:checked::after {
    transform: scale(1) rotate(45deg);
  }

  input[type="radio"]:checked::after {
    transform: scale(1);
  }

  input[type="checkbox"]:focus-visible,
  input[type="radio"]:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px
      color-mix(in srgb, var(--color-primary-500) 30%, transparent);
  }

  .extra-note {
    font-weight: 500;
  }

  button {
    justify-self: flex-start;
    background-color: var(--color-primary-500);
    color: var(--color-bg);
    border: none;
    border-radius: 999px;
    padding: 0.85rem 1.75rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition:
      transform 0.15s ease,
      box-shadow 0.15s ease;
  }

  button:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.12);
  }

  button:active {
    transform: translateY(0);
    box-shadow: none;
  }

  .conditionalFields {
    display: grid;
    gap: 1.5rem;
    overflow: hidden;
    max-height: 0;
    opacity: 0;
    padding-block: 0;
    visibility: hidden;
    transition:
      max-height 0.4s ease,
      opacity 0.3s ease,
      padding 0.4s ease,
      visibility 0s linear 0.4s;
  }

  .conditionalFields.is-visible {
    max-height: 2000px;
    opacity: 1;
    padding-block: 0.5rem 0;
    visibility: visible;
    transition:
      max-height 0.45s ease,
      opacity 0.35s ease,
      padding 0.45s ease,
      visibility 0s;
  }

  @media (min-width: 768px) {
    #rsvp {
      padding: 10rem 3rem 6rem;
      text-align: left;
      align-items: center;
    }

    .intro {
      text-align: center;
    }

    .checkbox-group {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector(".rsvpForm");
    if (!form) return;
    const attendanceField = form.querySelector("#attendance");
    const conditionalBlock = form.querySelector("[data-conditional-fields]");
    if (
      !(attendanceField instanceof HTMLSelectElement) ||
      !(conditionalBlock instanceof HTMLElement)
    ) {
      return;
    }

    const inputs = Array.from(
      conditionalBlock.querySelectorAll("input, select, textarea")
    );
    conditionalBlock.hidden = false;

    const toggleConditionalFields = () => {
      const shouldShow = attendanceField.value === "yes";
      conditionalBlock.classList.toggle("is-visible", shouldShow);
      conditionalBlock.setAttribute(
        "aria-hidden",
        shouldShow ? "false" : "true"
      );
      inputs.forEach((el) => {
        if (
          el instanceof HTMLInputElement ||
          el instanceof HTMLSelectElement ||
          el instanceof HTMLTextAreaElement
        ) {
          el.disabled = !shouldShow;
          if (!shouldShow) {
            if (
              el instanceof HTMLInputElement &&
              (el.type === "checkbox" || el.type === "radio")
            ) {
              el.checked = false;
            } else {
              el.value = "";
            }
          }
        }
      });
    };

    toggleConditionalFields();
    attendanceField.addEventListener("change", toggleConditionalFields);
  });
</script>
